<div class="container">
    <div class="jumbotron">
        <img class="displayed" src="/assets/img/burger.png">
        <h1> Eat-Da-Burger </h1>
    </div>
</div>

<div class="container">
  <div class="float-child">
    <div class="left">
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devour=true}}
          {{/unless}}
        {{/each}}
    </div>
  </div>

  <div class="float-child">
      <div class="right">
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devour=false}}
          {{/if}}
        {{/each}}
      </div>
  </div>
</div>

<div class="wrapper">
    <h2>Add a burger</h2>
      <form class="create-form">
        <div class="form-group">
          <input type="text" id="ca" name="name">
        </div>
        <div class="form-group">
          <label for="devoured"></label><br>
          <br>
          <input type="radio" name="devoured" value="0" checked>
        </div>
        <button class="button" type="submit">Submit</button>
      </form>
</div>